{
  "manifest_version": 2,

  "name": "SocialBot",
  "short_name": "SocialBot",
  "description": "AI powered bot for maintaining accounts activity.",
  "version": "0.0.2",
  "minimum_chrome_version": "59",

  "permissions":[
    "*://*.instagram.com/*",
    "*://*.500px.com/*",
    "*://*.cdninstagram.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage", 
    "notifications"
  ],
  "background": {
    "scripts": [ 
      "/dist/service.js"
    ],
    "persistent": true
  },
  "icons": {
      "128": "/assets/img/socialbot_logo.png"
  },
  "options_page": "/pages/manager.html#/settings/",
  "browser_action": {
    "default_popup": "/pages/popup.html",
    "default_title": "Watching"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}