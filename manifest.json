{
  "manifest_version": 2,

  "name": "FollowHunter - Instagram",
  "short_name": "FollowHunter",
  "description": "AI powered bot for maintaining accounts activity.",
  "version": "0.1",
  "minimum_chrome_version": "59",

  "permissions":[
    "*://*.instagram.com/*", 
    "*://*.cdninstagram.com/*",
    "webRequest",
    "webRequestBlocking",
    "storage", 
    "notifications"
  ],
  "background": {
    "scripts": [ 
      "/dist/service.js"
    ],
    "persistent": true
  },
  "content_scripts":[
     {
      "matches": ["*://*.instagram.com/*"],
      "js": ["/dist/content.js"],
      "all_frames": false
    }
  ],
  "icons": {
      "128": "/assets/img/web_player_remote_logo.png"
  },
  "options_page": "/pages/manager.html#/settings/",
  "browser_action": {
    "default_popup": "/pages/popup.html",
    "default_title": "Watching"
  }
}